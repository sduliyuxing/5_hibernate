<?lyx.taotao.xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="bao61to1waijian">
    <class name="manager" table="manager">
        <id name="mid" type="java.lang.Integer" column="mid">
            <generator class="native"/>
        </id>
        <property name="mname" type="java.lang.String" column="mname"/>
        <!-- 映射 1-1 的关联关系: 在对应的数据表中已经有外键了, 当前持久化类使用 one-to-one 进行映射 -->
        <!--
        	没有外键的一端需要使用one-to-one元素，该元素使用 property-ref 属性指定使用被关联实体主键以外的字段作为关联字段
         -->
        <one-to-one name="d" class="bao61to1waijian.department" property-ref="m"/>
     </class>
</hibernate-mapping>